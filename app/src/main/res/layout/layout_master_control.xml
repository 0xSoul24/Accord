<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_all"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="12dp"
        android:text="@string/play"
        app:icon="@drawable/ic_master_play"
        style="@style/Widget.Accord.MasterControl.Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/shuffle_all"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/shuffle_all"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="12dp"
        app:icon="@drawable/ic_master_shuffle"
        app:iconSize="19dp"
        android:text="@string/shuffle"
        style="@style/Widget.Accord.MasterControl.Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/play_all"
        app:layout_constraintTop_toTopOf="@id/play_all"
        />

</androidx.constraintlayout.widget.ConstraintLayout>